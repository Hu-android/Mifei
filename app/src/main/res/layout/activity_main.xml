<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tl = "http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.mifei.main.MainActivity"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <com.common.commonview.viewpager.UnScrollViewPager
            android:id="@+id/view_paper"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.common.commonview.viewpager.UnScrollViewPager>
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/Android_1dp"
        android:background="@color/spilt_line"/>

    <com.flyco.tablayout.CommonTabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tab_layout"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:padding="5dp"
        tl:tl_iconHeight = "@dimen/Android_23dp"
        tl:tl_iconMargin="1dp"
        tl:tl_iconWidth="@dimen/Android_23dp"
        tl:tl_indicator_color="@color/btn_color_blue"
        tl:tl_indicator_height="0dp"
        tl:tl_textSelectColor="@color/btn_color_blue"
        tl:tl_textUnselectColor="#999999"
        tl:tl_textsize="11sp">
    </com.flyco.tablayout.CommonTabLayout>
</LinearLayout>
