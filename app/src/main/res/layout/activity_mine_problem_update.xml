<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mine_problem_update"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.mifei.activity.MineProblemUpdate">

    <include
        android:id="@+id/toolbar"
        layout="@layout/title_back_view">
    </include>

    <RelativeLayout
        android:layout_below="@id/toolbar"
        android:paddingLeft="@dimen/Android_15dp"
        android:paddingRight="@dimen/Android_15dp"
        android:paddingTop="22dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/txt_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="为了给您提供更好的用户体验，我们期待您的反馈，谢谢！"
            android:textSize="12sp"
            android:textColor="@color/text_color_666666"/>

        <EditText
            android:layout_marginTop="@dimen/Android_13dp"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:background="@color/white"
            android:id="@+id/et_problem"
            android:layout_below="@id/txt_prompt"
            android:hint="填写您的意见和建议"
            android:textSize="14sp"
            android:textColorHint="@color/hint_text_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/Android_155dp" />

        <TextView
            android:layout_marginTop="@dimen/Android_9dp"
            android:textSize="12sp"
            android:textColor="@color/text_color_333333"
            android:text="还可以写150字"
            android:id="@+id/txt_remaining"
            android:layout_alignParentRight="true"
            android:layout_below="@id/et_problem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="提交建议"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_shape"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/Android_200dp"/>
    </RelativeLayout>
</RelativeLayout>
