<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tl = "http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_buy_goods"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.mifei.activity.BuyGoods">

    <include
        layout="@layout/title_back_view">
    </include>

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tab_layout_buy_goods"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        tl:tl_textSelectColor="#000000"
        tl:tl_textUnselectColor="#66000000"
        tl:tl_indicator_color="@color/btn_color_blue"
        tl:tl_indicator_width="10dp"/>

    <android.support.v4.view.ViewPager
        android:layout_weight="1"
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </android.support.v4.view.ViewPager>

</LinearLayout>
