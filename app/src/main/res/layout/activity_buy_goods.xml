<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tl = "http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_buy_goods"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.mifei.activity.BuyGoods">

    <include
        layout="@layout/title_back_view">
    </include>
    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/tab_layout_buy_goods"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        tl:tl_iconVisible="false"
        tl:tl_indicator_width="20dp"
        tl:tl_indicator_height="3dp"
        tl:tl_indicator_color="@color/btn_color_blue"
        tl:tl_textsize="15sp"
        tl:tl_textSelectColor="#FF292929"
        tl:tl_textUnselectColor="#FF292929">
    </com.flyco.tablayout.CommonTabLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <com.common.commonview.viewpager.UnScrollViewPager
            android:id="@+id/view_paper_buy_goods"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.common.commonview.viewpager.UnScrollViewPager>
    </FrameLayout>
</LinearLayout>
