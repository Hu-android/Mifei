<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/yckc_list_item"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_330"
        android:paddingRight="@dimen/px_45"
        android:gravity="center_vertical">

        <ImageView

            android:layout_width="@dimen/px_270"
            android:layout_height="@dimen/px_270"
            android:id="@+id/img_yckc_list_item"
            android:layout_marginLeft="@dimen/px_45"
            android:src="@drawable/default_place_holder"/>


        <include
            layout="@layout/yckc_righttxt_list_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/img_yckc_list_item"
            android:layout_alignTop="@+id/img_yckc_list_item"
            android:layout_alignBottom="@+id/img_yckc_list_item"
            android:layout_marginLeft="@dimen/px_24"
            android:layout_toRightOf="@+id/img_yckc_list_item">
        </include>
    </RelativeLayout>
</RelativeLayout>