<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/btn_color_blue"
    android:paddingTop="@dimen/Android_25dp"
    android:paddingLeft="@dimen/Android_15dp"
    android:paddingRight="@dimen/Android_15dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:id="@+id/img_title_left"
        android:src="@drawable/page1msgwhite"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:id="@+id/img_title_right"
        android:src="@drawable/setting"/>

    <ImageView
        android:id="@+id/img_heads"
        android:layout_width="@dimen/Android_65dp"
        android:layout_height="@dimen/Android_65dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/default_place_holder"
        android:layout_marginTop="@dimen/Android_23dp"
        />
    <TextView
        android:id="@+id/txt_null2"
        android:layout_below="@id/img_heads"
        android:layout_width="match_parent"
        android:layout_height="@dimen/Android_7dp" />

    <TextView
        android:id="@+id/txt_nickname"
        android:layout_below="@id/txt_null2"
        android:layout_centerHorizontal="true"
        android:text="胡佳雷(米菲分销商)"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/txt_null"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/Android_14dp"
        android:text=""
        android:layout_below="@id/txt_nickname"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/txt_sales"
        android:layout_below="@id/txt_null"
        android:layout_centerHorizontal="true"
        android:text="销售额"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txt_sales_num"
        android:layout_centerHorizontal="true"
        android:textSize="38sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥160080.00"
        android:layout_below="@id/txt_sales"/>
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/Android_12dp"
        android:layout_below="@id/txt_sales_num"/>


</RelativeLayout>
