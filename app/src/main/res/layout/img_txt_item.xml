<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/Android_12dp"
    android:paddingLeft="@dimen/Android_15dp"
    android:paddingRight="@dimen/Android_15dp"
    android:gravity="center_vertical">

    <ImageView
        android:layout_marginRight="@dimen/Android_10dp"
        android:layout_marginTop="@dimen/Android_3dp"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/circle_img"
        android:src="@drawable/default_place_holder"/>

    <RelativeLayout
        android:id="@+id/Rela_iti"
        android:layout_toRightOf="@id/circle_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_msg_title"
            android:textSize="17sp"
            android:textColor="#FF333333"
            android:text="公告"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_msg_order_num"
            android:text="订单编号：123456789"
            android:textSize="14sp"
            android:textColor="#FF999999"
            android:layout_below="@id/txt_msg_title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_msg_info"
            android:textColor="#FF666666"
            android:textSize="14sp"
            android:text="原因如下：请上传队公司账户汇款完整后，带交易凭证。"
            android:layout_below="@id/txt_msg_order_num"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_datetime"
            android:textSize="11sp"
            android:textColor="#FF999999"
            android:text="2018-10-04 11:09:09"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View
        android:layout_below="@id/Rela_iti"
        android:layout_marginTop="@dimen/Android_10dp"
        android:background="#F5F5F5"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
</RelativeLayout>