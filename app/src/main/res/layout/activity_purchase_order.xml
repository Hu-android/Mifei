<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/activity_purchase_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.mifei.activity.PurchaseOrder">

    <include
        layout="@layout/title_back_view">
    </include>

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/tab_layout_purchase_order"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        tl:tl_iconVisible="false"
        tl:tl_indicator_width="20dp"
        tl:tl_indicator_height="3dp"
        tl:tl_indicator_color="@color/btn_color_blue"
        tl:tl_textsize="15sp"
        tl:tl_textSelectColor="#FF292929"
        tl:tl_textUnselectColor="#FF292929">
    </com.flyco.tablayout.CommonTabLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <android.support.v4.view.ViewPager
            android:id="@+id/vp_purchase_order"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

</LinearLayout>
